<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NavajoWhite"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taadminnote"
            android:text="A password will be sent to User"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/blue"
            />

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Email Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taadminemail"
            android:textSize="19sp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="20dp"
            android:textColor="@color/Black"

            />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Teacher name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taadminname"
            android:textSize="19sp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="20dp"
            android:textColor="@color/Black"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createTaAdmin"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Generate Admin"
            android:textAllCaps="false"
            android:textColor="@color/AntiqueWhite"
            android:background="@color/gray"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>